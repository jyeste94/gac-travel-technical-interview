{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Usuarios</h4>
                    </div>
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary add-list">
                        <i class="las la-plus mr-3"></i>Nuevo Usuario
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data" role="row">
                                <th class="text-left">Username</th>
                                <th class="text-left">Active</th>
                                <th class="text-left">actions</th>
                            </tr>
                        </thead>

                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td class="text-left">{{ user.username }}</td>
                                <td class="text-left">{{ user.active ? 'Yes' : 'No' }}</td>
                                <td class="text-right">
                                    <a class="badge bg-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" href="{{ path('app_user_edit', {'id': user.id}) }}">
                                        <i class="ri-pencil-line"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">sin registros</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
